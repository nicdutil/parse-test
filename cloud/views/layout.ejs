<!DOCTYPE html>
 
<html>
  <head>
    <script type="text/javascript">var _sf_startpt=(new Date()).getTime()</script>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/styles.css' />
    <script src="http://www.parsecdn.com/js/parse-1.2.7.min.js"></script>
    <script src="/js/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="/js/underscore-min.js" type="text/javascript"></script>
    <script src="/js/backbone-min.js" type="text/javascript"></script>
    <script src="/js/templates.js" type="text/javascript"></script>
    <script src="/js/main.js" type="text/javascript"></script>
    <script type="text/javascript">
      Parse.initialize("<%= parseApplicationId %>", "<%= parseJavascriptKey %>");
    </script>
    
    <% if (locals.imageUrl) { %>
      <link rel="image_src" href="<%= locals.imageUrl %>" />
    <% } %>

    <% if (locals.openGraphTags) { %>
      <meta property="og:title" content="<%= locals.openGraphTags.title %>" />
      <meta property="og:type" content="<%= locals.openGraphTags.type %>" />
      <meta property="og:url" content="<%= locals.openGraphTags.url %>" />
      <meta property="og:image" content="<%= locals.openGraphTags.image %>" />
    <% } %>
  </head>
  
  <body>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=<%= facebookApplicationId %>";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>
    
    <div class="header">
      <div class="inner">
        <h1>
          <a href="/">
            ANY<strong>MEME</strong>
          </a>
        </h1>
        <a href="/" class="button">
          CREATE
        </a>
        <a href="/popular" class="button" id="pop">
          POPULAR
        </a>
      </div>
    </div>
    
    <div class="container">
      <% if (locals.errorFlash) { %>
        <div class="errorFlash"><%= errorFlash %></div>
      <% } %>
      
      <%- body %>
    </div>

  </body>

</html>
